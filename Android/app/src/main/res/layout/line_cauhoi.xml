<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="30dp">
    <TextView
        android:id="@+id/tvViTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CÂU HỎI 1:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="#750000"
        />
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imgCauHoi"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:visibility="gone"/>
        <TextView
            android:id="@+id/tvCauHoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãy cho biết đáp án!"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_a"
                android:text="RadioButton - A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radio_b"
                android:text="RadioButton - B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radio_c"
                android:text="RadioButton - C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radio_d"
                android:text="RadioButton - D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>